<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Student Details Form</title>
</head>
<body>
    <h1>Student Details Form</h1>

    <form method="post" action="/Student/Details">
        <label for="Name">Name:</label><br />
        <input type="text" id="Name" name="Name" value="@Model?.Name" required /><br /><br />

        <label for="Age">Age:</label><br />
        <input type="number" id="Age" name="Age" value="@Model?.Age" required /><br /><br />

        <label for="Course">Course:</label><br />
        <input type="text" id="Course" name="Course" value="@Model?.Course" required /><br /><br />

        <input type="submit" value="Submit" />
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p style="color:green">@ViewBag.Message</p>
    }
</body>
</html>
